<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>PR Tracker for .NET projects</title>
	<link rel="stylesheet" href="~/css/output.css" />
</head>
<body>
		<header class="max-w-screen-lg mx-auto flex flex-col my-4">

			<div class="flex flex-row">
				<div class="flex flex-row justify-between w-full items-center">
					<a class="p-4" asp-area="" asp-controller="Home" asp-action="Index">PR Tracker</a>
					<span class="p-4">
						<partial name="_Login" />
					</span>
				</div>
			</div>

			<nav class="flex flex-col md:flex-row justify-between">
				<ul class="flex flex-row justify-center sm:justify-end w-full">
					<li class="p-4">
						<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="p-4">
						<a asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
					</li>
					<li class="p-4">
						<a asp-area="" asp-controller="Home" asp-action="About">About the project</a>
					</li>
				</ul>
			</nav>
		</header>

		<main role="main">
			@RenderBody()
		</main>

		<footer>
				<p>&copy; 2020 - PR Tracker for .NET</p>
		</footer>

		@RenderSection("Scripts", required: false)
	</body>
</html>
